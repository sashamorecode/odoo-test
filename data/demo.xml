<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Questions -->
        <record id="question_1" model="simple.question">
            <field name="name">Q1</field>
            <field name="question_text">How satisfied are you with our service?</field>
        </record>

        <record id="question_2" model="simple.question">
            <field name="name">Q2</field>
            <field name="question_text">How likely are you to recommend us to others?</field>
        </record>

        <record id="question_3" model="simple.question">
            <field name="name">Q3</field>
            <field name="question_text">What could we improve?</field>
        </record>

        <!-- Surveys -->
        <record id="survey_1" model="simple.survey">
            <field name="name">Customer Satisfaction Survey</field>
            <field name="description">Quarterly customer feedback collection</field>
            <field name="estimated_costs">1500.00</field>
            <field name="approval_state">approved</field>
            <field name="question_ids" eval="[(6, 0, [ref('question_1'), ref('question_2'), ref('question_3')])]"/>
        </record>

        <record id="survey_2" model="simple.survey">
            <field name="name">Product Feedback Survey</field>
            <field name="description">New product usability study</field>
            <field name="estimated_costs">800.00</field>
            <field name="approval_state">draft</field>
            <field name="question_ids" eval="[(6, 0, [ref('question_1'), ref('question_2')])]"/>
        </record>

        <!-- Survey Responses -->
        <record id="response_1" model="simple.response">
            <field name="phone_number">+1234567890</field>
            <field name="survey" ref="survey_1"/>
        </record>

        <record id="response_2" model="simple.response">
            <field name="phone_number">+1987654321</field>
            <field name="survey" ref="survey_1"/>
        </record>

        <!-- Question Responses -->
        <record id="q_response_1_1" model="simple.question_response">
            <field name="response_text">Very satisfied</field>
            <field name="phone_number">+1234567890</field>
            <field name="question" ref="question_1"/>
            <field name="survey" ref="response_1"/>
        </record>

        <record id="q_response_1_2" model="simple.question_response">
            <field name="response_text">Very likely</field>
            <field name="phone_number">+1234567890</field>
            <field name="question" ref="question_2"/>
            <field name="survey" ref="response_1"/>
        </record>

        <record id="q_response_1_3" model="simple.question_response">
            <field name="response_text">Delivery speed</field>
            <field name="phone_number">+1234567890</field>
            <field name="question" ref="question_3"/>
            <field name="survey" ref="response_1"/>
        </record>

        <record id="q_response_2_1" model="simple.question_response">
            <field name="response_text">Neutral</field>
            <field name="phone_number">+1987654321</field>
            <field name="question" ref="question_1"/>
            <field name="survey" ref="response_2"/>
        </record>

        <record id="q_response_2_2" model="simple.question_response">
            <field name="response_text">Somewhat likely</field>
            <field name="phone_number">+1987654321</field>
            <field name="question" ref="question_2"/>
            <field name="survey" ref="response_2"/>
        </record>
    </data>
</odoo>
