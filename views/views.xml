<odoo>
    <!-- Survey views -->
    <record id="view_form_simple_survey" model="ir.ui.view">
        <field name="name">simple.survey.form</field>
        <field name="model">simple.survey</field>
        <field name="arch" type="xml">
            <form string="Survey">
                <header>
                    <button name="action_submit_for_approval"
                            string="Submit for Approval"
                            type="object"
                            invisible="approval_state != 'draft' and approval_state != False"
                            class="btn btn-primary"/>
                    <button name="action_approve"
                            string="Approve"
                            type="object"
                            invisible="approval_state != 'waiting'"
                            class="btn btn-success"/>
                    <button name="action_reject"
                            string="Reject"
                            type="object"
                            invisible="approval_state != 'waiting'"
                            class="btn btn-danger"/>
                    <button name="action_initiate_survey"
                            string="Initiate Survey"
                            invisible="approval_state != 'approved'"
                            class="btn btn-success"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"
                                readonly="approval_state != 'draft'"/>
                            <field name="phone_numbers_file" filename="phone_numbers_file_name"
                                readonly="approval_state != 'draft'"/>

                        </group>
                        <group>
                            <field name="description"
                                readonly="approval_state != 'draft'"/>
                            <field name="phone_numbers_file" filename="phone_numbers_file_name"
                                readonly="approval_state != 'draft'"/>
                            <field name="estimated_costs"
                                readonly="approval_state != 'draft'"/>
                        </group>
                        <field name="question_ids" widget="many2many"
                            readonly="approval_state != 'draft'"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_list_simple_survey" model="ir.ui.view">
        <field name="name">simple.survey.list</field>
        <field name="model">simple.survey</field>
        <field name="arch" type="xml">
            <list string="Surveys">
                <field name="name"/>
                <field name="approval_state"/>
                <field name="estimated_costs"/>
            </list>
        </field>
    </record>
     <record id="action_simple_survey" model="ir.actions.act_window">
        <field name="name">Surveys</field>
        <field name="res_model">simple.survey</field>
        <field name="view_mode">list,form</field>
    </record>


    <!-- Question views -->
    <record id="view_list_simple_question" model="ir.ui.view">
        <field name="name">simple.question.list</field>
        <field name="model">simple.question</field>
        <field name="arch" type="xml">
            <list string="Questions">
                <field name="name"/>
                <field name="question_text"/>
            </list>
        </field>
    </record>

    <record id="view_form_simple_question" model="ir.ui.view">
        <field name="name">simple.question.form</field>
        <field name="model">simple.question</field>
        <field name="arch" type="xml">
            <form string="Question">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="question_text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
   <record id="action_simple_question" model="ir.actions.act_window">
        <field name="name">Questions</field>
        <field name="res_model">simple.question</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Response views -->
   <record id="view_form_simple_response" model="ir.ui.view">
        <field name="name">simple.response.form</field>
        <field name="model">simple.response</field>
        <field name="arch" type="xml">
            <form string="Response">
                <sheet>
                    <group>
                        <group>
                            <field name="phone_number"/>
                            <field name="survey" widget="many2one"/>
                        </group>
                        <field name="responses" widget="one2many"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_list_simple_response" model="ir.ui.view">
        <field name="name">simple.response.list</field>
        <field name="model">simple.response</field>
        <field name="arch" type="xml">
            <list string="Response">
                <field name="phone_number"/>
                <field name="survey" widget="many2one"/>
            </list>
        </field>
    </record>

    <record id="action_simple_response" model="ir.actions.act_window">
        <field name="name">Response</field>
        <field name="res_model">simple.response</field>
        <field name="view_mode">list,form</field>
    </record>
    <!-- question response views -->
   <record id="view_form_simple_response" model="ir.ui.view">
        <field name="name">simple.question_response.form</field>
        <field name="model">simple.question_response</field>
        <field name="arch" type="xml">
            <form string="Individual Response">
                <sheet>
                    <group>
                        <field name="question" widget="many2one"/>
                        <field name="response_text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_list_simple_question_response" model="ir.ui.view">
        <field name="name">simple.question_response.list</field>
        <field name="model">simple.question_response</field>
        <field name="arch" type="xml">
            <list string="Response">
                <field name="phone_number"/>
                <field name="question" widget="many2one"/>
                <field name="response_text"/>
            </list>
        </field>
    </record>

    <record id="action_simple_question_response" model="ir.actions.act_window">
        <field name="name">Question Response</field>
        <field name="res_model">simple.question_response</field>
        <field name="view_mode">list,form</field>
    </record>



    <menuitem id="menu_simple_survey_root" name="Simple Survey"/>
    <menuitem id="menu_simple_survey" name="Surveys" parent="menu_simple_survey_root" action="action_simple_survey"/>
    <menuitem id="menu_simple_response" name="Responses" parent="menu_simple_survey_root" action="action_simple_response"/>
    <!--menuitem id="menu_simple_question" name="Questions" parent="menu_simple_survey_root" action="action_simple_question"-->
</odoo>

